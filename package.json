{
  "name": "koishi-plugin-github-fork",
  "description": "GitHub Toolkit for Koishi [Fork]",
  "version": "6.0.0",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "Shigma <shigma10826@gmail.com>",
  "contributors": [
    "Yis_Rime <yis_rime@outlook.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YisRime/koishi-plugin-github-fork.git"
  },
  "bugs": {
    "url": "https://github.com/YisRime/koishi-plugin-github-fork/issues"
  },
  "homepage": "https://github.koishi.chat",
  "keywords": [
    "bot",
    "chatbot",
    "koishi",
    "plugin",
    "github",
    "webhook"
  ],
  "koishi": {
    "service": {
      "required": [
        "database",
        "server"
      ],
      "optional": [
        "assets",
        "puppeteer"
      ],
      "implements": [
        "github"
      ]
    }
  },
  "scripts": {
    "build": "atsc -b",
    "docs:dev": "vitepress dev docs --open",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "mocha --exit -r esbuild-register -r yml-register tests/*.spec.ts",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@koishijs/assets": "^1.0.3",
    "@koishijs/plugin-database-memory": "^2.5.1",
    "@koishijs/plugin-help": "^2.4.1",
    "@koishijs/plugin-mock": "^2.6.5",
    "@koishijs/plugin-server": "^3.1.3",
    "@koishijs/vitepress": "^3.2.0",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/marked": "^4.3.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.19.3",
    "atsc": "^1.2.2",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "chai-shape": "^1.0.0",
    "esbuild": "^0.14.54",
    "esbuild-register": "^3.5.0",
    "jest-mock": "^28.1.3",
    "koishi": "^4.16.2",
    "koishi-plugin-puppeteer": "^3.7.3",
    "mocha": "^9.2.2",
    "nock": "^13.4.0",
    "sass": "^1.69.5",
    "shx": "^0.3.4",
    "typescript": "^5.3.3",
    "vitepress": "1.0.0-rc.31",
    "yml-register": "^1.1.0"
  },
  "peerDependencies": {
    "koishi": "^4.16.2"
  },
  "dependencies": {
    "@octokit/webhooks-types": "^5.8.0",
    "koishi-plugin-markdown": "^1.1.1"
  }
}
